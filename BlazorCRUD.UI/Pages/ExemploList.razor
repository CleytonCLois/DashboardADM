@page "/filmlist"
@using Model
@using Interfaces
@inject IExemploService ExemploService

<h1>ExemploList</h1>

<p>This page shows a list of all films.</p>
@if (films == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>Title</th>
				<th>Director</th>
				<th>Release Date</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var film in films)
			{
				<tr>
					<td>@film.Id</td>
					<td>@film.SituacaoAlmoxarifadoId</td>
					<td>@film.ControlarRequisicao</td>
					<td><a href="/filmdetails/@film.Id"><i>Edit</i></a></td>
					<td><a href="/filmdelete/@film.Id"><i>Delete</i></a></td>
				</tr>
			}
		</tbody>
	</table>
}


@code { 
	
	private IEnumerable<Exemplo> films;

	protected override async Task OnInitializedAsync()
	{
		try
		{
			films = await ExemploService.GetAllExemplos();
		}
		catch (Exception e)
		{
			throw;
		}
	}

}
