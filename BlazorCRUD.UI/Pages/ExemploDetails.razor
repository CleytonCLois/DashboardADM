@*@page "/filmdetails"
@page "/filmdetails/{id:int}"
@using Model
@using Interfaces
@inject IExemploService ExemploService
@inject NavigationManager NavigationManager

<h1>Exemplo Details</h1>

<EditForm Model="@film">
	<table class="table">
		<tr>
			<td>Title</td>
			<td><input type="text" @bind="film.Title" /></td>
		</tr>
		<tr>
			<td>Director</td>
			<td><input type="text" @bind="film.Director" /></td>
		</tr>
		<tr>
			<td>Release Date</td>
			<td><input type="text" @bind="film.ReleaseDate" /></td>
		</tr>
		<tr>
			<td colspan="2" style="text-align:center">
				<input type="submit" value="Save" @onclick="SaveExemplo" />
				<input type="button" value="Cancel" @onclick="CancelExemplo" />
			</td>
		</tr>
	</table>
</EditForm>

@code {
	[Parameter]
	public int id { get; set; }

	Exemplo film = new Exemplo();

	protected void CancelExemplo()
	{
		NavigationManager.NavigateTo("/filmlist");
	}

	protected async Task SaveExemplo()
	{
		await ExemploService.SaveExemplo(film);

		NavigationManager.NavigateTo("/filmlist");
	}

	protected override async Task OnInitializedAsync()
	{
		if (id == 0)
		{
			film.ReleaseDate = DateTime.Now;
		}
		else
		{
			film = await ExemploService.GetDetails(id);
		}
	}
}*@
